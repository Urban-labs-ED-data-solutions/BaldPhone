<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/home_screen_padding"
    android:paddingRight="@dimen/home_screen_padding"
    android:visibility="visible"
    tools:ignore="NestedWeights">

    <TextClock
        android:id="@+id/clock"
        style="@style/ButtonsText.Huge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@drawable/style_for_buttons_transparent"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textSize="70sp"
        android:visibility="visible" />

    <android.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.07" />

    <LinearLayout
        android:id="@+id/phone_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/style_for_buttons_transparent_rectangle"
        android:orientation="horizontal">
        <!-- change strings to welfare -->
        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_item_2"
            android:visibility="visible"
            app:__src="@drawable/ic_last_calls_01"
            app:__text="@string/recent" />

<!--        <include layout="@layout/ll_divider_as_horizontal_layout" />-->

        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_dialer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/home_item_2"
            android:visibility="visible"
            app:__src="@drawable/ic_phone_calls_01"
            app:__text="@string/dialer" />

<!--        <include layout="@layout/ll_divider_as_horizontal_layout" />-->

        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_item_2"
            android:visibility="visible"
            app:__src="@drawable/ic_contacts_01"
            app:__text="@string/contacts" />
    </LinearLayout>

    <android.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.07" />

    <LinearLayout
        android:id="@+id/messages_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/style_for_buttons_transparent_rectangle"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">


        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_item_1"
            android:visibility="visible"
            app:__src="@drawable/ic_whatsapp"
            app:__text="@string/whatsapp" />

<!--        <include layout="@layout/ll_divider_as_horizontal_layout" />-->
        <!-- change strings to welfare -->
        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_assistant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/home_item_1"
            android:visibility="visible"
            app:__src="@drawable/unnamed"
            app:__text="@string/assistant" />

<!--        <include layout="@layout/ll_divider_as_horizontal_layout" />-->
        <!-- change strings to welfare -->
        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_item_1"
            android:visibility="visible"
            app:__src="@drawable/ic_zoomus_icon"
            app:__text="@string/zoom" />
    </LinearLayout>

    <android.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.07" />

    <LinearLayout
        android:id="@+id/media_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/style_for_buttons_transparent_rectangle"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_item_3"
            android:visibility="visible"
            app:__src="@drawable/rg"
            app:__text="@string/rg" />

<!--        <include layout="@layout/ll_divider_as_horizontal_layout" />-->


        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_mtk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/home_item_3"
            android:visibility="visible"
            app:__src="@drawable/logo_mtk2"
            app:__text="@string/mtk_txt" />

<!--        <include layout="@layout/ll_divider_as_horizontal_layout" />-->
        <!-- change strings to INFO -->
        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_item_3"
            android:visibility="visible"
            app:__src="@drawable/kul"
            app:__text="@string/kul" />



    </LinearLayout>

    <android.widget.Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.07" />

    <LinearLayout
        android:id="@+id/time_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/style_for_buttons_transparent_rectangle"
        android:orientation="horizontal"
        android:padding="0dp"
        tools:ignore="RtlHardcoded">

        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_photos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/home_item_4"
            android:visibility="visible"
            app:__src="@drawable/ic_pics_01"
            app:__text="@string/photos" />

<!--        <include layout="@layout/ll_divider_as_horizontal_layout" />-->

<!--        <com.bald.uriah.baldphone.views.FirstPageAppIcon-->
<!--            android:id="@+id/bt_apps"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="15dp"-->
<!--            android:layout_marginRight="15dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/home_item_4"-->
<!--            android:visibility="visible"-->
<!--            app:__src="@drawable/ic_apps_01"-->
<!--            app:__text="@string/apps" />-->

<!--        <include layout="@layout/ll_divider_as_horizontal_layout" />-->
        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/home_item_4"
            android:visibility="visible"
            app:__src="@drawable/ic_camera_01"
            app:__text="@string/camera" />
        <com.bald.uriah.baldphone.views.FirstPageAppIcon
            android:id="@+id/bt_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@drawable/home_item_4"
            android:visibility="visible"
            app:__src="@drawable/ic_apps_01"
            app:__text="@string/apps" />
    </LinearLayout>
</LinearLayout>